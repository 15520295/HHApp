<resources>
    <!-- Base theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize  -->
        <item name="android:windowNoTitle">true</item>

        <!-- Color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorHint">@color/edit_text_hint</item>
        <item name="android:textColor">@color/edit_text_txt</item>

    </style>


    <style name="LabelStyle" parent="AppTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/primary_txt</item>
    </style>

    <style name="SolidButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/solid_bg</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="StrokeButtonStyle" parent="SolidButtonStyle">
        <item name="android:background">@drawable/stroke_bg</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/edit_text_txt</item>
        <item name="android:textColorHint">@color/edit_text_hint</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <!--        EnterPhoneNumberActivity-->
    <style name="noAnimTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--ProgressBar-->
    <style name="GrayProgressBarTheme"
        parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">#ad818181</item>
    </style>

    <!--Flat Button-->
    <style name="CusFlatButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/flat_btn_selector</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/sf_pro_display_light</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:paddingLeft">@dimen/margin_default_20</item>


    </style>

    <!--TitleBar-->
    <style name="CusTitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@color/title_bar_background_color</item>
        <item name="bgatitlebar_leftAndRightPadding">20dp</item>
        <item name="bgatitlebar_leftAndRightTextColor">@color/title_bar_text_color</item>
        <item name="bgatitlebar_titleTextColor">@color/title_bar_text_color</item>
    </style>
</resources>
