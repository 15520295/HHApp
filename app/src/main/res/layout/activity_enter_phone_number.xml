<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.huydaoduc.hieu.chi.hhapp.activity.EnterPhoneNumberActivity">


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:background="@color/fui_transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_back_black"/>

    <TextView
        android:id="@+id/tv_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton"
        android:layout_marginStart="25dp"
        android:layout_marginTop="@dimen/margin_default_wide"
        android:text="Please enter your mobile number"
        android:textSize="@dimen/normal_text_size" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/input_phone_number_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_request"
        android:layout_marginTop="@dimen/margin_default_wide"
        >

        <ImageView
            android:id="@+id/iv_flag"
            android:layout_width="30dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="25dp"
            android:scaleX="1.2"
            android:scaleY="1.2"
            app:layout_constraintBottom_toBottomOf="@+id/tv_country_code"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_country_code"
            app:srcCompat="@drawable/vn_flag_icon" />

        <TextView
            android:id="@+id/tv_country_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/iv_flag"
            android:layout_toLeftOf="@+id/iv_flag"
            android:drawablePadding="8dp"
            android:text="+84"
            android:textSize="@dimen/normal_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/et_phone_number"
            app:layout_constraintStart_toEndOf="@+id/iv_flag"
            app:layout_constraintTop_toTopOf="@+id/et_phone_number"
            app:layout_constraintVertical_bias="0.523" />

        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/tv_country_code"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="Enter your mobile number"
            android:inputType="numberDecimal"
            android:textColorHint="@color/edit_text_hint"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_country_code"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_error"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/et_phone_number"
            android:layout_below="@+id/et_phone_number"
            android:layout_marginEnd="25dp"

            android:layout_marginStart="4dp"
            android:layout_marginTop="6dp"
            android:text="Please enter your mobile number"
            android:textColor="@color/color_error"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/et_phone_number"
            app:layout_constraintTop_toBottomOf="@+id/et_phone_number" />
    </android.support.constraint.ConstraintLayout>



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="#f000"
        app:borderWidth="0dp"
        app:elevation="2dp"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_forward" />

    <TextView
        android:id="@+id/tv_connect_social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:text="TextView" />
</RelativeLayout>
