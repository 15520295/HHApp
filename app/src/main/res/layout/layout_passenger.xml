<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_pick_up_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prb_loading"
                style="@style/CusFlatButtonStyle"
                android:text="Enter pick-up point "
                android:textStyle="normal"
                android:textAllCaps="false"
                android:drawablePadding="15dp"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/ic_location_on"
                android:gravity="left|center_vertical"/>

            <Button
                android:id="@+id/btn_end_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prb_loading"
                style="@style/CusFlatButtonStyle"
                android:text="Where are you going ?"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:drawablePadding="15dp"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/ic_location_on"
                android:gravity="left|center_vertical"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:weightSum="10"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.github.glomadrian.materialanimatedswitch.MaterialAnimatedSwitch
            android:id="@+id/locationRider_switch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            app:ball_press_color="@android:color/white"
            app:ball_release_color="@color/ballReleaseColor"
            app:base_press_color="@color/basePressColor"
            app:base_release_color="@color/baseReleaseColor"
            app:icon_press="@drawable/ic_location_on"
            app:icon_release="@drawable/ic_location_off" />

        <Button
            android:id="@+id/btn_find_driver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="FIND Driver" />

        <Button
            android:id="@+id/btnPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="10dp"
            android:text="Post" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>