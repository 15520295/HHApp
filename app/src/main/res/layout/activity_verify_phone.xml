<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.huydaoduc.hieu.chi.hhapp.activity.EnterPhoneNumberActivity">


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:background="@color/fui_transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_back_black"/>

    <TextView
        android:id="@+id/tv_guid_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:text="Enter the 4-digit code sent to you at"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_guid_line"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:text="+84 34 92 888"
        android:textSize="20sp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_phone_number"
        android:layout_marginStart="25dp"
        android:layout_marginTop="14dp"
        >

        <EditText
            android:id="@+id/et_number1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:hint="0"
            android:textAlignment="center"
            android:textSize="22sp"
            />

        <EditText
            android:id="@+id/et_number2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/et_number1"
            android:hint="0"
            android:textAlignment="center"
            android:textSize="22sp"
            />

        <EditText
            android:id="@+id/et_number3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/et_number2"
            android:hint="0"
            android:textAlignment="center"
            android:textSize="22sp"
            />

        <EditText
            android:id="@+id/et_number4"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/et_number3"
            android:hint="0"
            android:textAlignment="center"
            android:textSize="22sp"
            />

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="#f000"
        app:borderWidth="0dp"
        app:elevation="2dp"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_forward"/>

    <TextView
        android:id="@+id/tv_connect_social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:text="TextView" />
</RelativeLayout>
