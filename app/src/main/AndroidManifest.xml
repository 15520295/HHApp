<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.huydaoduc.hieu.chi.hhapp">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <!-- Check Internet connection -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_api_key" />

        <activity android:name=".Main.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".CheckInternetBroadcastReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.location.GPS_ENABLED_CHANGE" />
                <action android:name="android.location.PROVIDERS_CHANGED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".Main.Home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Manager.Place.SearchActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Main.DriverActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ActivitiesAuth.PhoneAuthActivity" />
        <activity android:name=".Main.MainActivity"></activity>
        <activity
            android:name=".ActivitiesAuth.EnterPhoneNumberActivity"
            android:label="@string/title_activity_enter_phone_number"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ActivitiesAuth.VerifyPhoneActivity"
            android:label="@string/title_activity_enter_phone_number"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity android:name=".ActivitiesAuth.EnterPassActivity" />
        <activity
            android:name=".ActivitiesAuth.UpdateInfoActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />

        <service
            android:name=".Manager.CheckActivityCloseService"
            android:stopWithTask="false"
            android:label="Real time location checking service" >
        </service>
        <activity android:name=".Main.FindingDriver">
        </activity>
    </application>

</manifest>